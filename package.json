{
  "name": "@etvas/etvaskit",
  "version": "0.5.0",
  "description": "ETVAS UI Kit",
  "main": "lib/index.js",
  "module": "es/index.js",
  "files": [
    "css",
    "es",
    "lib",
    "umd"
  ],
  "scripts": {
    "build": "nwb build-react-component",
    "prebuild:link": "mv node_modules_ node_modules",
    "build:link": "npm run build -- --no-demo",
    "postbuild:link": "mv node_modules node_modules_",
    "clean": "nwb clean-module && nwb clean-demo",
    "prepublishOnly": "npm run build",
    "start": "nwb serve-react-demo",
    "format": "prettier-eslint \"$PWD/src/**/*.{js,jsx}\" --write",
    "lint:js": "eslint 'src/**/*.{js,jsx}'",
    "lint:style": "stylelint 'src/**/*.{css,jsx}'",
    "lint": "npm run lint:js & npm run lint:style",
    "test": "nwb test-react",
    "test:coverage": "nwb test-react --coverage",
    "test:watch": "nwb test-react --server"
  },
  "peerDependencies": {
    "react": "16.x",
    "styled-components": "^5.1.0"
  },
  "dependencies": {
    "@ivoryio/kogaio": "^0.7.93",
    "@styled-system/theme-get": "^5.1.2",
    "lodash": "^4.17.15"
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "eslint-config-react-app": "^5.2.1",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-flowtype": "^4.7.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^4.0.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.2",
    "nwb": "0.24.x",
    "prettier-eslint": "^9.0.1",
    "prettier-eslint-cli": "^5.0.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "styled-components": "^5.1.0",
    "stylelint": "^13.3.3",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.10.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "npm run lint:js --fix"
    ],
    "*.{jsx,css}": [
      "npm run lint:style --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "author": "Mihai Ro",
  "homepage": "https://github.com/etvascom/ui",
  "license": "MIT",
  "repository": "https://github.com/etvascom/ui",
  "keywords": [
    "etvas",
    "etvas ui",
    "react-component"
  ]
}
